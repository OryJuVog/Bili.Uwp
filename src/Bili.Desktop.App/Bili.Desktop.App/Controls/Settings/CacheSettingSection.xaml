<local:SettingSectionControl
    x:Class="Bili.Desktop.App.Controls.CacheSettingSection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Bili.Desktop.App.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lab="using:CommunityToolkit.Labs.WinUI"
    xmlns:loc="using:Bili.Desktop.App.Resources.Extension"
    xmlns:local="using:Bili.Desktop.App.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <lab:SettingsCard Description="{loc:Locale Name=ClearCacheDescription}" Header="{loc:Locale Name=ClearCache}">
        <lab:SettingsCard.HeaderIcon>
            <controls:FluentIcon Symbol="FastAcceleration" />
        </lab:SettingsCard.HeaderIcon>

        <StackPanel Orientation="Horizontal">
            <Button
                x:Name="ClearButton"
                MinWidth="120"
                Click="OnClearButtonClickAsync"
                Content="{loc:Locale Name=Clear}" />
            <ProgressRing
                x:Name="LoadingRing"
                Width="20"
                Height="20"
                Margin="12,0,0,0"
                VerticalAlignment="Center"
                IsActive="True"
                Visibility="Collapsed" />
        </StackPanel>
    </lab:SettingsCard>
</local:SettingSectionControl>
