<local:SettingSectionControl
    x:Class="Bili.Desktop.App.Controls.InitialCheckSection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lab="using:CommunityToolkit.Labs.WinUI"
    xmlns:loc="using:Bili.Desktop.App.Resources.Extension"
    xmlns:local="using:Bili.Desktop.App.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <lab:SettingsCard Description="{loc:Locale Name=InitialCheckDescription}" Header="{loc:Locale Name=InitialCheckTitle}">
        <lab:SettingsCard.HeaderIcon>
            <local:FluentIcon Symbol="AlertUrgent" />
        </lab:SettingsCard.HeaderIcon>
        <ToggleSwitch Style="{StaticResource RightAlignedCompactToggleSwitchStyle}" IsOn="{x:Bind ViewModel.IsSupportContinuePlay, Mode=TwoWay}" />
    </lab:SettingsCard>
</local:SettingSectionControl>
