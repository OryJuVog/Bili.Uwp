<UserControl
    x:Class="Bili.Desktop.App.Controls.Dynamic.DynamicNotSupportItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Bili.Desktop.App.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loc="using:Bili.Desktop.App.Resources.Extension"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid
        Padding="12"
        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
        CornerRadius="{ThemeResource ControlCornerRadius}">
        <StackPanel
            VerticalAlignment="Center"
            Orientation="Horizontal"
            Spacing="12">
            <controls:FluentIcon VerticalAlignment="Center" Symbol="QuestionCircle" />
            <TextBlock
                Style="{StaticResource CaptionTextBlockStyle}"
                VerticalAlignment="Center"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Text="{loc:Locale Name=NotSupportDynamic}" />
        </StackPanel>
    </Grid>

</UserControl>
