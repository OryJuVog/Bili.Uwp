<local:ToolboxPageBase
    x:Class="Bili.Desktop.App.Pages.Desktop.ToolboxPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="using:Bili.Desktop.App.Controls.App"
    xmlns:controls="using:Bili.Desktop.App.Controls"
    xmlns:converter="using:Bili.Desktop.App.Resources.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:icon="using:Richasy.FluentIcon.Uwp"
    xmlns:loc="using:Bili.Desktop.App.Resources.Extension"
    xmlns:local="using:Bili.Desktop.App.Pages.Desktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolbox="using:Bili.ViewModels.Interfaces.Toolbox"
    mc:Ignorable="d">

    <local:ToolboxPageBase.Resources>
        <converter:ToolboxItemIconConverter x:Key="IconConverter" />
    </local:ToolboxPageBase.Resources>

    <Grid RowSpacing="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <app:PageHeader Title="{loc:Locale Name=Toolbox}" />

        <ScrollViewer
            Grid.Row="1"
            Padding="{x:Bind CoreViewModel.PageHorizontalPadding, Converter={StaticResource HorizontalThicknessConverter}, Mode=OneWay}"
            HorizontalScrollMode="Disabled"
            VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <ItemsRepeater Margin="0,4,0,20" ItemsSource="{x:Bind ViewModel.ToolCollection}">
                    <ItemsRepeater.Layout>
                        <UniformGridLayout
                            ItemsStretch="Fill"
                            MinColumnSpacing="12"
                            MinItemHeight="220"
                            MinItemWidth="160"
                            MinRowSpacing="12" />
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="toolbox:IToolboxItemViewModel">
                            <controls:CardPanel Click="OnItemClick" DataContext="{x:Bind}">
                                <Grid Padding="16,20" RowSpacing="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Border
                                        Width="80"
                                        Height="80"
                                        HorizontalAlignment="Center"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        CornerRadius="{StaticResource ControlCornerRadius}">
                                        <controls:FluentIcon
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="32"
                                            Symbol="{x:Bind Type, Mode=OneWay, Converter={StaticResource IconConverter}}" />
                                    </Border>

                                    <TextBlock
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        Grid.Row="1"
                                        Margin="0,12,0,0"
                                        HorizontalAlignment="Center"
                                        FontWeight="Bold"
                                        Text="{x:Bind Title, Mode=OneWay}"
                                        TextAlignment="Center"
                                        TextTrimming="CharacterEllipsis" />

                                    <TextBlock
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Grid.Row="2"
                                        HorizontalAlignment="Center"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="{x:Bind Description, Mode=OneWay}"
                                        TextAlignment="Center"
                                        TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </controls:CardPanel>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</local:ToolboxPageBase>
